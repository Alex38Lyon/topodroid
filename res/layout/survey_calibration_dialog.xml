<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="3dp">


    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:paddingBottom="10dp">
      <TextView android:id="@+id/tv_length" 
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
         android:ems="25"
         android:text="@string/calibration_length"
      />
      <EditText android:id="@+id/et_length"
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
      />
    </LinearLayout>

    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:paddingBottom="10dp">
      <TextView android:id="@+id/tv_azimuth" 
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
         android:ems="25"
         android:text="@string/calibration_azimuth"
      />
      <EditText android:id="@+id/et_azimuth"
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
      />
    </LinearLayout>

    <LinearLayout
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:paddingBottom="10dp">
      <TextView android:id="@+id/tv_clino" 
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
         android:ems="25"
         android:text="@string/calibration_clino"
      />
      <EditText android:id="@+id/et_clino"
         android:layout_width="200dp"
         android:layout_height="wrap_content" 
      />
    </LinearLayout>


    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp" 
        android:gravity="left"
        >
      <Button android:id="@+id/button_ok"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
        style="@style/button_default"
        android:text="@string/button_save"
        />
    </LinearLayout>

</LinearLayout>

