<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >

  <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginvbig"
    android:orientation="horizontal"
    >
    <Button android:id="@+id/plot_new"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      style="@style/button_default"
      android:text="@string/plot_new"
    />

    <!-- FIXME_SKETCH_3D -->

    <LinearLayout 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:gravity="right"
      android:orientation="horizontal"
      >
      <Button android:id="@+id/sketch3d_new"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/button_default"
        android:text="@string/sketch3d_new"
      />
    </LinearLayout>
  </LinearLayout>
  
  <GridView android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:stackFromBottom="false"
    android:transcriptMode="alwaysScroll"
    android:layout_weight="1"
    android:textSize="@dimen/textsize"
    android:numColumns="2"
    android:divider="@color/divider"
    android:dividerHeight="2dp"
  />  

  <LinearLayout 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_marginTop="@dimen/marginv"
    android:layout_marginBottom="@dimen/marginv"
    android:orientation="horizontal"
    >
    <Button android:id="@+id/btn_close"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginRight="@dimen/marginh"
      style="@style/button_default"
      android:text="@string/button_close"
    />
    <Button android:id="@+id/btn_back"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      style="@style/button_default"
      android:text="@string/button_cancel"
    />
  </LinearLayout>
</LinearLayout>
